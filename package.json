{
  "name": "deep-ai-chat",
  "version": "1.0.0",
  "description": "A floating chat interface desktop application using n8n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean": "rimraf dist node_modules/.cache",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable --dir",
    "build:simple": "electron-builder --win portable --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "chat",
    "ai",
    "n8n"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.chat.floatingapp",
    "productName": "Deep AI Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "assets/**/*",
      "node_modules/**/*",
      "!landing-page/**/*",
      "!install-dependencies.js",
      "!install-electron.js",
      "!install.bat",
      "!install.sh",
      "!README.md",
      "!LICENSE"
    ],
    "extraResources": [
      {
        "from": "node_modules",
        "to": "app/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Deep AI Chat",
      "installerIcon": "assets/deep.ico",
      "uninstallerIcon": "assets/deep.ico",
      "installerHeaderIcon": "assets/deep.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  },
  "dependencies": {
    "@google-cloud/speech": "^7.0.1",
    "@google/generative-ai": "^0.2.1",
    "n8n": "^1.30.1",
    "node-fetch": "^2.7.0",
    "sqlite3": "^5.1.7"
  }
}
